<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayFragment" >

    <ImageView
        android:id="@+id/imgFragDisplayAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:src="@drawable/select_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblFragDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="45dp"
        android:text="@string/lblFragDisplayName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgFragDisplayAvatar" />

    <TextView
        android:id="@+id/lblFragDisplayEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/lblFragDisplayEmail"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblFragDisplayName" />

    <TextView
        android:id="@+id/lblFragDisplayIUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/lblFragDisplayIUse"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblFragDisplayEmail" />

    <TextView
        android:id="@+id/txtFragDisplayIUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/lblFragDisplayIUse"
        app:layout_constraintTop_toBottomOf="@+id/lblFragDisplayEmail" />

    <TextView
        android:id="@+id/lblFragDisplayIUse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="@string/lblFragDisplayIUse2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txtFragDisplayIUse"
        app:layout_constraintTop_toBottomOf="@+id/lblFragDisplayEmail" />

    <TextView
        android:id="@+id/lblFragDisplayMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/lblFragDisplayMood"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblFragDisplayIUse" />

    <TextView
        android:id="@+id/txtFragDisplayMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/lblFragDisplayMood"
        app:layout_constraintTop_toBottomOf="@+id/lblFragDisplayIUse" />

    <TextView
        android:id="@+id/lblFragDisplayMood2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="@string/lblFragDisplayMood2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txtFragDisplayMood"
        app:layout_constraintTop_toBottomOf="@+id/lblFragDisplayIUse" />

    <ImageView
        android:id="@+id/imgFragDisplayMood"
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/happy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblFragDisplayMood" />

    <TextView
        android:id="@+id/txtFragDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/lblFragDisplayName"
        app:layout_constraintTop_toBottomOf="@+id/imgFragDisplayAvatar" />

    <TextView
        android:id="@+id/txtFragDisplayEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/lblFragDisplayEmail"
        app:layout_constraintTop_toBottomOf="@+id/txtFragDisplayName" />
</androidx.constraintlayout.widget.ConstraintLayout>